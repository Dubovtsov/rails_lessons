<%= form_with(model: [:admin, @badge], local: true) do |form| %>
  <% if badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

      <ul>
      <% badge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field col-md-6">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group field col-md-6">
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-control" %>
  </div>

  <div class="form-group col-md-6 dropdown">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, {class: "form-control"} %>
  </div>

  <div class="form-group field col-md-6">
    <%= form.label :badge_rule_id %>
    <%= form.collection_select :badge_rule_id, BadgeRule.all, :id, :name, {promt:true}, {class: "form-control"} %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "#{t('back')}", admin_badges_path, class: "btn btn-danger" %>
  </div>
<% end %>
