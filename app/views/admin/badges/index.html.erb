<h1>
  <%= t('.header') %> |
  <%= link_to "#{t('.new')}", new_admin_badge_path, class: "btn btn-primary" %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.name %></td>
        <td><%= badge.image %></td>
        <td><%= link_to 'Show', admin_badge_path(badge) %></td>
        <td><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
        <td><%= link_to 'Destroy', admin_badge_path(badge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_admin_badge_path %>
