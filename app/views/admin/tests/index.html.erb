<h1>
  <%= t('.header') %> |
  <%= link_to "#{t('.new')}", new_admin_test_path, class: "btn btn-primary" %>
</h1>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer" >
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.number_of_questions') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<br>
