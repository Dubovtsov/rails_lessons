<%= form_with(model: [:admin, @test], local: true) do |form| %>

<%= render 'shared/errors', resource: @test %>

  <div class="form-group field col-md-6">
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title, class: "form-control" %>
  </div>

  <div class="form-group field col-md-6">
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level, class: "form-control" %>
  </div>

  <div class="form-group col-md-6 dropdown">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, {class: "form-control"} %>
  </div>

  <div class="form-group field col-md-6">
    <%= form.label :timer %>
    <%= form.number_field :timer, class: "form-control" %>
  </div>

  <div class="form-group field col-md-6">
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "#{t('back')}", admin_tests_path, class: "btn btn-danger" %>
  </div>
</br>
<% end %>
