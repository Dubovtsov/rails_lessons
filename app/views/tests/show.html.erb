<p>
  Title: <strong><%= @test.title %></strong>
</p>

<p>
  Level: <strong><%= @test.level %></strong>
</p>

<h3>Question</h3>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.body %></td>
        <td><%= link_to 'Show', test_question_path(@test, question) %></td>
        <td><%= link_to 'Destroy', test_question_path(@test, question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_test_question_path(@test) %> |
<%= link_to 'Back', tests_path %>
