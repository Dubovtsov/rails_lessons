<%= form_with model: @user, local: true do |form| %>
  <%#= render 'shared/errors', resource: @user %>

  <% if @user.errors.present? %>
  <div>
    <h2><%= pluralize(@user.errors.count, 'error') %> detected:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :user_email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :user_password %>
  </p>


  <p>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>

  <p><%= form.submit %></p>
<% end %>